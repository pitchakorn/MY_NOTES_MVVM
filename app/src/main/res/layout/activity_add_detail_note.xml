<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddDetailNoteActivity">

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginEditText"
        android:hint="@string/hint_title"
        android:inputType="text" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title"
        android:layout_marginTop="@dimen/MarginEditText"
        android:hint="@string/hint_description"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/MarginButtonSave"
        android:text="@string/btn_save_note" />

</RelativeLayout>